	<licenses>
		<license>
			<name>Apache 2.0 License</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
		</license>
	</licenses>
	<issueManagement>
		<system>JIRA</system>
		<url>https://issues.apache.org/jira/browse/SYSTEMML</url>
