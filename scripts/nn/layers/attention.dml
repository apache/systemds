# 1. Create "calculate_score" function, for the beginning without additional parameters -> calculate with dot product.

calculate_scores = function(matrix[double] query, matrix[double] key)
    return (matrix[double] scores) {
    #dim(query) = AxB
    #dim(key) = CxB
    #dim(scores) = AxC
  scores = query %*% t(key)
}

