    return (matrix[double] attention) {
    #dim(scores) = AxC
    #dim(value) = CxD
    #dim(weights) = AxC
    #dim(attention) = AxD
  weights = softmax(scores / ncol(value) ^ 0.5) # TODO discuss, can we assume that dim V == dim K?
  print(weights)
  attention = weights %*% value
}

