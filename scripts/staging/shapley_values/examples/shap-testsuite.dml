#shapley_permutations_multirow
dummyModel = function(Matrix[Double] X, Double mult)
return(Matrix[Double] P){
  P = rowSums(X)*mult
}
model_args = list(mult=1)
x_multirow = matrix("100 200 300  100 300 400 100 100 500", rows=3, cols=3)
X_bg = matrix("11 12  13 21 22 23 31 32 33 41 42 43", rows=4, cols=3)
n_permutations = 2
integration_samples = 3
seed = 42
a1 = SPO::shapley_permutations_by_row("dummyModel", model_args, x_multirow, X_bg, n_permutations, integration_samples, 0, as.matrix(-1), seed, v)
a2 = SPO::shapley_permutations_by_permutation("dummyModel", model_args, x_multirow, X_bg, n_permutations, integration_samples, seed, v)
b = matrix(0, rows=nrow(x_multirow), cols=ncol(x_multirow))
for (i in 1:nrow(x_multirow))
  b[i] = SPO::shapley_permutations_legacy("dummyModel", model_args, x_multirow[i], X_bg, n_permutations, integration_samples, seed, v)
r = matrix("69 168 267 69 268 367 69 68 467", rows=3, cols=3)
assertEqual("shapley_permutations_by_row", a1, b, r, v)
assertEqual("shapley_permutations_by_permutation", a2, b, r, v)

#get_non_varying_inds
