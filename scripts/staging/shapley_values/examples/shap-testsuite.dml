assertEqual("get_non_varying_inds", a, a, r, v)

assertEqual = function(String comp_name, Matrix[Double] a, Matrix[Double] b, Matrix[Double] r, Integer verbose){
  print("--> Test: "+comp_name)
  if (verbose != 0){
    pm("Expected Result:",r)
    pm("A:",a)
    pm("B:",b)
  }
  assert(nrow(a) == nrow(r))
  assert(nrow(b) == nrow(r))
  assert(ncol(a) == ncol(r))
  assert(ncol(b) == ncol(r))
  e = a == b
  f = b == r
  assert(prod(e)*prod(f)==1)
  if (verbose != 0){
    print("A and B are equal to the expected Result.")
  } else {
    print("SUCCESS")
  }
  print("\n=======================================\n")
}


pm = function(String name, Matrix[Double] m){
  print(name+":\n"+toString(m))
}