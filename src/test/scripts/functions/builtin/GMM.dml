X = read($1, data_type = "frame", format = "csv")
X = as.matrix(X[, 2:ncol(X)-1])

[labels, prob, df, bic, mu, prec_chol, w] = gmm(X=X, nComponents = $2,
  model = $3,  initParams = $4, maxIter = $5,
  reg = $6, tol = $7, seed=$8, verbose=TRUE)

out = (rowMaxs(prob) < 0.7)

write(prob, $9)
write(out, $10)
