input = read($in_file);
size = ifdef($size, 0.87)
width = ifdef($width, 512)
height = ifdef($height, 512)
x_offset = ifdef($x_offset, 0)
y_offset = ifdef($y_offset, 0)

input = matrix(input, rows=height, cols=width)
new_w = floor(width * size)
new_h = floor(height * size)
print("New w/h=" + new_w + "/" + new_h)

crop1 = img_crop(input, new_w, new_h, x_offset, y_offset);
write(crop1, $out_file);
