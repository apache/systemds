X = read($X)

model = outlierByIsolationForest(X=X, n_trees=$n_trees, subsampling_size=$subsampling_size, seed=$seed)
M = as.matrix(model['model'])
subsampling_size_out = as.scalar(model['subsampling_size'])

scores = outlierByIsolationForestApply(iForestModel=model, X=X)

write(scores, $output)
write(M, $model_output)
write(subsampling_size_out, $subsampling_size_output)
