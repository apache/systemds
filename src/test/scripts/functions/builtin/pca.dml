X = read($1)
k = $2;

# one hot encoding
m = nrow(X)
n = ncol(X)
fdom = colMaxs(X);
foffb = t(cumsum(t(fdom))) - fdom;
foffe = t(cumsum(t(fdom)))
rix = matrix(seq(1,m)%*%matrix(1,1,n), m*n, 1)
cix = matrix(X + foffb, m*n, 1);
X2 = table(rix, cix); #one-hot encoded

X2 = scale(X=X2, scale=TRUE, center=TRUE);
[PC, V] = pca(X=X2, K=k)

write(PC, $3)
write(V, $4)
