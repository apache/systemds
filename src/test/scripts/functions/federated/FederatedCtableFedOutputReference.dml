X = rbind(read($1), read($2), read($3), read($4));

m = nrow(X);
n = ncol(X);

# prepare offset vectors and one-hot encoded X
maxs = colMaxs(X);

if($7) { # matrix input
  rix = matrix(seq(1,m)%*%matrix(1,1,n), m, n);
  cix = matrix(X + (t(cumsum(t(maxs))) - maxs), m, n);
}
else {
  rix = matrix(seq(1,m)%*%matrix(1,1,n), m*n, 1);
  cix = matrix(X + (t(cumsum(t(maxs))) - maxs), m*n, 1);
}

W = rix + cix;

if($5)
  if($6)
    X2 = table(cix, rix, W);
  else
    X2 = table(cix, rix);
else
  if($6)
    X2 = table(rix, cix, W);
  else
    X2 = table(rix, cix);

Z = as.matrix(sum(X2));

write(Z, $8);
