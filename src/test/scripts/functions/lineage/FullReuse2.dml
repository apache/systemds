# Increase rows and cols for better performance gains

r = 100000
c = 100

X = rand(rows=r, cols=c, seed=42);
y = rand(rows=r, cols=1, seed=43);

j = 10
R = matrix(0, c, j);

for(i in 1:j) {
  lambda = 10 ^ -i;

  A = t(X) %*% X + diag(matrix(lambda, rows=ncol(X), cols=1));
  b = t(X) %*% y;
  beta = solve(A, b);

  R[,i] = beta;
}

write(R, $1, format="text");
