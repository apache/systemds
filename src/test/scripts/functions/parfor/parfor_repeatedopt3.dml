V = read($1,rows=$2,cols=$3);
n = $3;

R = matrix(0, rows=1,cols=n); 

iter = 1;
while( iter <= 3 )
{
   if( $5==1 )
   {
      vx = matrix(1,rows=nrow(V),cols=1)*iter;
      V = append(V, vx);
      rx = matrix(0,rows=1,cols=1);
      R = append(R, rx);
   }

   #repeated opt for each while iteration
   parfor( i in 1:ncol(V), log=DEBUG )
   {
      Xi = V[,i];
      R[1,i] = R[1,i] + sum(Xi);
   }
   
   iter = iter+1;
}

write(R, $4);       