execFun = function(Matrix[Double] Xin) return (Double sx) 
{
   X = Xin[2:nrow(Xin),]

   if( nrow(X)>1 )
   {
      Y = X %*% t(X);
      sx = sum(Y);
   }
   else
   {
      sx = 0;
   }
}

V = read($1, rows=$2, cols=$3);

R = Rand(rows=$3,cols=1,min=0,max=0); 
dummy = Rand(rows=1, cols=1, min=1, max=1);

for( i in 1:$3 ) 
{
   X = V[,i];
   sumx = execFun(X);
   
   R[i,1] = dummy * sumx; 
}  

write(R, $4);       