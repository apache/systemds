X = read($1);
P = read($2);
v = read($3);
k = ncol(P);

if(1==1){}

Q = P * (X %*% v);
HV = t(X) %*% (Q - P * (rowSums (Q) %*% matrix(1, rows=1, cols=k)));

if(1==1){}

write(HV, $4);       
