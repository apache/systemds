# Read matrix X and operation type
X = read($1)
type = $2

# Perform operations
if(type==1){
    R = X/1
}
else if(type==2){
    R = X*1
}
else if(type==3){
    R = 1*X
}
else if(type==4){
    R = X-0
}
else if(type==5){
    R = -1*X
}
else if(type==6){
    R = X * -1
}

# Write the result matrix R
write(R, $3)
