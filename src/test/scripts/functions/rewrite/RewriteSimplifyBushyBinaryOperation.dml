# Load matrices/vector X, Y, Z, v
X = read($1)
Y = read($2)
Z = read($3)
v = read($4)

# select type of operation
type = $5

# Perform the operations
if( type == 1 ) {
    R = (X*(Y*(Z%*%v)))
}
else if( type == 2 ) {
    R = (X+(Y+(Z%*%v)))
}

# Write the result matrix R
write(R, $6)
