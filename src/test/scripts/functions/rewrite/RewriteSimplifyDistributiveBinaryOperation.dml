# Load matrices X, Y
X = read($1)
Y = read($2)
type = $3

# Perform the operations
if( type == 1 ) {
    R = (X-Y*X) * 1
}
else if( type == 2 ) {
    R = (Y*X-X) * 1
}
else if( type == 3 ) {
    R = (X+Y*X) * 1
}
else if( type == 4 ) {
    R = (Y*X+X) * 1
}


# Write the result matrix R
write(R, $4)
