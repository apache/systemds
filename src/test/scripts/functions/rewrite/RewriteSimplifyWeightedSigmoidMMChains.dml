# Read matrices X, Y, and W
X = read($1)
Y = read($2)
W = read($3)
type = $4


# Perform operations
if(type == 1){
    R = W * sigmoid(Y%*%t(X))
}
else if(type == 2){
    R = W * sigmoid(-(Y%*%t(X)))
}
else if(type == 3){
    R = W * log(sigmoid(Y%*%t(X)))
}
else if(type == 4){
    R = W * log(sigmoid(-(Y%*%t(X))))
}
else if(type == 5){
    R = W * sigmoid(Y%*%X)
}
else if(type == 6){
    R = W * sigmoid(-(Y%*%X))
}
else if(type == 7){
    R = W * log(sigmoid(Y%*%X))
}
else if(type == 8){
    R = W * log(sigmoid(-(Y%*%X)))
}

# Write the result matrix R
write(R, $5)

