# read input frame
A = read("$$indir$$a", rows=$$rows$$, cols=$$cols$$, format="text");
B = read("$$indir$$b", data_type="frame", format="csv");
C = read("$$indir$$c", data_type="frame", format="csv");

jspec = "{ids: true, dummycode: [1]}";
D = transformapply(target=B, spec=jspec, meta=C);

R = D %*% A

write(R, "$$outdir$$result", format="text");


